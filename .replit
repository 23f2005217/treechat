modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libxcrypt", "vim-full"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TreeChat"

[[workflows.workflow]]
name = "TreeChat"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"python -m uvicorn server.main:app --host 0.0.0.0 --port 8000 --reload & cd client && npm run dev -- --host 0.0.0.0 --port 5000\""
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "python -m uvicorn server.main:app --host 0.0.0.0 --port 5000"]
build = ["bash", "-c", "cd client && npm install && npm run build && cd ../server && pip install -r requirements.txt"]
