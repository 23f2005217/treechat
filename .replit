modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libxcrypt", "vim-full"]

[workflows]
runButton = "Dev"

[[workflows.workflow]]
name = "Dev"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn server.main:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev -- --host 0.0.0.0 --port 5173"
waitForPort = 5173

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5173
externalPort = 80
